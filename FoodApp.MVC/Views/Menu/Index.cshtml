@model FoodApp.BLL.Models.ViewMenuVM

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<p>
    <a asp-controller="Menu" asp-action="New">Add Meal to Menu</a>
</p>

<form asp-controller="Menu" asp-action="Index" method="get">
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />

    
        <a asp-controller="Menu" asp-action="New">Add Meal to Menu</a>
    
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuList![0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuList![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuList![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuList![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuList![0].Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MenuList!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Picture)
                </td>
                <td>
                    <a asp-action="EditFoodItem" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="LearnMore" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>