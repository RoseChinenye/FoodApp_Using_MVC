@{
    ViewBag.Title = "AddFoodItem";
    Layout = "_Layout";
}
@model FoodApp.BLL.Models.AddFoodItemVM;

<h2>Menu</h2>
<p>Current Menu</p>
<hr/>


<form class="col-7" asp-controller="Menu" asp-action="Save">

    @if (@ViewBag.ErrMsg != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ViewBag.ErrMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert-danger" asp-validation-summary="@ValidationSummary.All"></div>

    <div class="mb-3">
        <label asp-for="@Model.Category" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Category">
        <span asp-validation-for="Category" class="alert-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Title">
        <span asp-validation-for="Title" class="alert-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label"></label>
        <textarea class="form-control" asp-for="@Model.Description"></textarea>

    </div>

    <div class="mb-3">
        <label asp-for="@Model.Price" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Price">
        <span asp-validation-for="Price" class="alert-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Picture" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Picture">
        <span asp-validation-for="Picture" class="alert-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
    ;
}
