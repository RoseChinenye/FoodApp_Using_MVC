@model FoodApp.BLL.Models.MenuVM;

@{
    ViewBag.Title = "AddFoodItem";
    
}

<h2 style="padding-top: 20vh;">Add a Meal</h2>
<hr/>


<form class="col-7" asp-controller="Menu" asp-action="Save">

    @if (ViewBag.SuccessMsg != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.SuccessMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert-danger" asp-validation-summary="@ValidationSummary.All"></div>

    <div class="mb-3">
        <label asp-for="@Model.Category" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Category" required>
        <span asp-validation-for="Category" class="alert-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Title" required>
        <span asp-validation-for="Title" class="alert-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label"></label>
        <textarea class="form-control" asp-for="@Model.Description" required></textarea>

    </div>

    <div class="mb-3">
        <label asp-for="@Model.Price" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Price" required>
        <span asp-validation-for="Price" class="alert-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Picture" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Picture">
        <span asp-validation-for="Picture" class="alert-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Submit</button> |
    <a asp-action="Index">Back to List</a>
</form>

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
    ;
}
